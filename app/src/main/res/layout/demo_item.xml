<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fugu_margin_10"
        android:layout_marginTop="@dimen/fugu_margin_10"
        android:layout_marginRight="@dimen/fugu_margin_10"
        app:cardCornerRadius="@dimen/cardview_default_radius">

    <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:adjustViewBounds="true"
        />

        <TextView
                android:id="@+id/tvTitle"
                style="@style/tvfontBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fugu_margin_10"
                android:paddingRight="@dimen/fugu_margin_10"
                android:textSize="16sp"
                android:layout_marginTop="@dimen/fugu_margin_10"
                android:text="Title message"/>

        <TextView
                android:id="@+id/tvDescription"
                style="@style/tvfont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/fugu_margin_10"
                android:paddingRight="@dimen/fugu_margin_10"
                android:textSize="14sp"
                android:layout_marginBottom="@dimen/fugu_margin_10"
                android:text="This is a description text message"/>

        <TextView
                android:id="@+id/tvDateTime"
                style="@style/tvfontTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="@dimen/fugu_margin_10"
                android:layout_marginBottom="@dimen/fugu_margin_10"
                android:text="12 Dec, 2019"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>